{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "stream": [
        "node_modules/stream-browserify/index.js"
      ],
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@environments/*": [
        "src/environment/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@constants/*": [
        "src/app/core/constants/*"
      ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}